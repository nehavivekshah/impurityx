<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loading Animation</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
    <style>
        #loader-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            /* Semi-transparent white background */
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            /* Ensure it's on top */
        }
        #leaf-image {
            margin-right: 20px;
            /* Space between image and spinner */
        }
        body {
            display: none;
            /*Initially hide body content*/
        }
        body.loaded {
            display: block;
            /* Show content after loaded*/
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center" id="loader-container">
        <img id="leaf-image" src="assets/img/loader/leaf-1.png" alt="Loading..." width="100">
        <div class="spinner-border text-success ml-3" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div class="container mt-5">
        <h1>My Content</h1>
        <p>This content will be visible after the loader disappears.</p>
    </div>
    <script src="script.js"></script>
    <script>
        const leafImage = document.getElementById('leaf-image');
        const loaderContainer = document.getElementById('loader-container');
        const images = ["assets/img/loader/leaf-1.png", "assets/img/loader/leaf-2.png"]; // Replace with your actual image paths
        let imageIndex = 0;
        function changeImage() {
            imageIndex = (imageIndex + 1) % images.length;
            leafImage.src = images[imageIndex];
        }
        // Swap image every 300 milliseconds
        const intervalId = setInterval(changeImage, 300);
        // Simulate loading (replace with your actual loading logic)
        setTimeout(() => {
            clearInterval(intervalId); // Stop the image swapping
            loaderContainer.style.display = 'none'; // Hide the loader
            document.body.classList.add('loaded'); // Show the content
        }, 1000); // Simulate 3 seconds loading time
    </script>
</body>
</html>